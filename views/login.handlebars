<h2 class="title is-4">Login</h2>

<section class="container columns">
    <article class="panel column is-dark">
        <p class="panel-heading">Login</p>
        <div class="panel-block">
            <div class="field">
                <form class="form login-form">
                    <div class="form-group">
                        <label for="email-login">Email:</label>
                        <input class="form-input" type="email" id="email-login" required>
                    </div>
                    <div class="form-group">
                        <label for="password-login">Password:</label>
                        <input class="form-input" type="password" id="password-login" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </article>
    <article class="panel column is-dark">
        <p class="panel-heading">Sign Up</p>
        <div class="panel-block">
            <div class="field">
                <form class="form signup-form">
                    <div class="form-group">
                        <label for="username-signup">Username:</label>
                        <input class="form-input" type="text" id="username-signup" required>
                    </div>
                    <div class="form-group">
                        <label for="email-signup">Email:</label>
                        <input class="form-input" type="email" id="email-signup" required>
                    </div>
                    <div class="form-group">
                        <label for="password-signup">Password:</label>
                        <input class="form-input" type="password" id="password-signup" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </article>
</section>

<script src="/js/login.js"></script>
