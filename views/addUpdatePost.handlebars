    <div class="control">
        <h3 class="title is-5">Title</h3>
        <input id="blog-title" class="input" type="text" placeholder="Blog Title" value="{{blog.title}}">
    </div>
    <div class="control">
        <h3 class="title is-5">Content</h3>
        <textarea id="blog-post" class="textarea" placeholder="Blog Post">{{blog.post}}</textarea>
    </div>
    {{#if update}}
    <button id="update-blog" class="button" type="submit" data-blogId="{{blog.id}}">Update Post</button>
    {{else}}
    <button id="add-blog" class="button" type="submit">Add Post</button>
    {{/if}}
    <script src="/js/blogPost.js"></script>